<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TrainingProgram</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TrainingProgram.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">TrainingProgram</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Management System</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-area="Manage" asp-controller="Sector" asp-action="index">Sector</a>
                                <a class="dropdown-item" asp-area="Manage" asp-controller="degree" asp-action="index">Degree</a>
                                <a class="dropdown-item" asp-area="Manage" asp-controller="courseNature" asp-action="index">Course Nature</a>
                                <a class="dropdown-item" asp-area="Manage" asp-controller="implementationType" asp-action="index">Implementation Type</a>
                                <a class="dropdown-item" asp-area="Manage" asp-controller="totalImplementation" asp-action="index">Total Implementation</a>
                                <a class="dropdown-item" asp-area="Manage" asp-controller="trainingSpecialist" asp-action="index">Training Specialist</a>
                                <a class="dropdown-item" asp-area="Manage" asp-controller="employee" asp-action="index">Employee</a>
                                <a class="dropdown-item" asp-area="Manage" asp-controller="instructor" asp-action="index">Instructor</a>

                            </div>
                        </li>
                    </ul>
                    
                </div>

                <div>
                    <partial name="_LoginPartial"></partial>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - TrainingProgram - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
