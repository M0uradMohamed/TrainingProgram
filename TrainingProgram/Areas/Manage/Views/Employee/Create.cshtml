@model Models.ViewModels.EmployeeVM

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FoundationId" class="control-label"></label>
                <input asp-for="FoundationId" class="form-control" />
                <span asp-validation-for="FoundationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
 @*                <input asp-for="Gender" class="form-control" />
                <span asp-validation-for="Gender" class="text-danger"></span> *@
                <select class="form-select" name="Gender">
                    @{
                        <option value="">غير محدد</option>
                        foreach (var item in ViewBag.Gender)
                        {
                            <option value="@item.Key">@item.Value</option>
                        }
                    }
                </select>
            </div>


            <div class="form-group">
                <label asp-for="Major" class="control-label"></label>
                <input asp-for="Major" class="form-control" />
                <span asp-validation-for="Major" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Job" class="control-label"></label>
                <input asp-for="Job" class="form-control" />
                <span asp-validation-for="Job" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Department" class="control-label"></label>
                <input asp-for="Department" class="form-control" />
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SectorId" class="control-label"></label>
               @*  <select asp-for="SectorId" class ="form-control" asp-items="ViewBag.SectorId"></select> *@
                <select class="form-select" name="SectorId">
                    @{
                        <option value="">غير محدد</option>
                        foreach (var item in ViewBag.Sector)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="DegreeId" class="control-label"></label>
         @*        <select asp-for="DegreeId" class ="form-control" asp-items="ViewBag.DegreeId"></select> *@
                <select class="form-select" name="DegreeId">
                    @{
                        <option value="">غير محدد</option>
                        foreach (var item in ViewBag.Degree)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    }
                </select>

            </div>
            <div class="form-group">
                <label asp-for="WorkPlace" class="control-label"></label>
                <input asp-for="WorkPlace" class="form-control" />
                <span asp-validation-for="WorkPlace" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Belong" class="control-label"></label>
@*                 <input asp-for="Belong" class="form-control" />
                <span asp-validation-for="Belong" class="text-danger"></span> *@

                <select class="form-select" name="Belong">
                    @{
                        <option value="">غير محدد</option>
                        foreach (var item in ViewBag.belong)
                        {
                            <option value="@item.Key">@item.Value</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="CompanyNameForForeign" class="control-label"></label>
                <input asp-for="CompanyNameForForeign" class="form-control" />
                <span asp-validation-for="CompanyNameForForeign" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
