            </div>
            <div class="form-group">
                <label asp-for="Participants" class="control-label"></label>
                <input asp-for="Participants" class="form-control" />
                <span asp-validation-for="Participants" class="text-danger"></span>
            <div class="form-group">
                <label asp-for="ImplementationPlace" class="control-label"></label>
                <input asp-for="ImplementationPlace" class="form-control" />
                <span asp-validation-for="ImplementationPlace" class="text-danger"></span>
            </div>
            </div>
            <div class="form-group">
                <label asp-for="DaysCount" class="control-label"></label>
                <input asp-for="DaysCount" class="form-control" />
                <span asp-validation-for="DaysCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BeginningDate" class="control-label"></label>
                <input asp-for="BeginningDate" class="form-control" type="date" />
                <span asp-validation-for="BeginningDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndingDate" class="control-label"></label>
