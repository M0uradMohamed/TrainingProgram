                        {
                            <option value="">غير محدد</option>
                        }
                        foreach (var item in ViewBag.ImplementationMonth)
                        {
                            if (Model.ImplementationMonth == item.Key)
                            {
                                <option value="@item.Key" selected>@item.Value</option>
                            }
                            else
