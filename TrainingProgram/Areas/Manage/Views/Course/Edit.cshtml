                        {
                            <option value="">غير محدد</option>
                        }
                        foreach (var item in ViewBag.Check)
                        {
                            if (Model.Check == item.Key)
                            {
                                <option value="@item.Key" selected>@item.Value</option>
                            }
                            else
                            {
                                <option value="@item.Key">@item.Value</option>
                            }

                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="TotalImplementationId" class="control-label"></label>
                <select class="form-select" name="TotalImplementationId">
                    @{
                        if (Model.TotalImplementationId == null)
                        {
