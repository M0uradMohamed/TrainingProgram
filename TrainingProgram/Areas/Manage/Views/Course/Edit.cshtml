                            if (Model.CourseType == item.Key)
                            {
                                <option value="@item.Key" selected>@item.Value</option>
                            }
                            else
                            {
                                <option value="@item.Key">@item.Value</option>
                            }

                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="CourseNatureId" class="control-label"></label>
                <select class="form-select" name="CourseNatureId">
                    @{
                        if (Model.CourseNatureId == null)
                        {
                            <option value="" selected>غير محدد</option>
                        }
                        else
                        {
                            <option value="">غير محدد</option>
                        }
                        foreach (var item in ViewBag.CourseNature)
                        {

                            if (Model.CourseNatureId == item.Id)
                            {
                                <option value="@item.Id" selected>@item.Name</option>
                            }
                            else
                            {
                                <option value="@item.Id">@item.Name</option>
                            }

                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="ImplementationMonth" class="control-label"></label>
                <select class="form-select" name="ImplementationMonth">
                    @{

                        if (Model.ImplementationMonth == null)
                        {
                            <option value="" selected>غير محدد</option>
                        }
