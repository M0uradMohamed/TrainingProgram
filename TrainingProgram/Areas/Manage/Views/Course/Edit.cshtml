            <div class="form-group">
                <label asp-for="TraineesNotes" class="control-label"></label>
                <textarea asp-for="TraineesNotes" class="form-control" id="textAreaExample1" rows="4" wrap="hard"></textarea>
                <span asp-validation-for="TraineesNotes" class="text-danger"></span>
