                </select>
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <textarea asp-for="Notes" class="form-control" id="textAreaExample1" rows="4" wrap="hard"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RatingSpecialist" class="control-label"></label>
                <input asp-for="RatingSpecialist" class="form-control" />
                <span asp-validation-for="RatingSpecialist" class="text-danger"></span>
