                @Html.DisplayNameFor(model => model.EnterName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrimaryInstructor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.implementationType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalImplementation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseNature)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TargetSector)
            </td>
