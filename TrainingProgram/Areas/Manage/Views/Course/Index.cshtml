                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImplementationMonth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActualCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Check)
            </td>
            <td>
                    @{
                        if(item.PdfFile!=null)
                        {
                            
                        <a href="@Url.Action("DownloadFile", "course", new { fileName = item.PdfFile })" class="btn btn-primary">
                        <i class="bi bi-download"></i>
                    </a>
                        }
                    }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnterName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrimaryInstructor.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.implementationType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalImplementation.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseNature.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
